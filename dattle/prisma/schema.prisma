generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
}
model User {
  id        String   @id @default(uuid()) // Primary Key
  email     String   @unique
  password  String
  name      String
  animals   Animal[] // One-to-many relationship with animals
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Animal {
  id        String   @id @default(uuid()) // Primary Key
  tag       String   @unique // Unique identifier for the animal
  species   String   
  breed     String?  
  birthDate DateTime?
  ownerId   String   // Foreign Key for User
  owner     User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  events    Event[]  // One-to-many relationship with events
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id        String   @id @default(uuid()) // Primary Key
  type      String   
  date      DateTime
  description String?
  animalId  String   // Foreign Key for Animal
  animal    Animal   @relation(fields: [animalId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


enum EventType{
  CELO
  PARTO
  ENFERMEDAD
}
